#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

cd $BUILD_DIR

if [ -f Makefile.in ]; then
  echo "-----> Running automake"
  automake 2>&1 | indent
fi

if [ -f configure.in ]; then
  echo "-----> Running autoconf"
  autoconf 2>&1 | indent
fi

# configure
if [ -f configure ]; then
  echo "-----> Configuring"
  ./configure 2>&1 | indent
fi

# make
echo "-----> Compiling with Make"
make 2>&1 | indent
